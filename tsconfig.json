{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"lib": [
			"es6",
			"DOM",
			"DOM.Iterable"
		],
		"allowJs": true,
		"strict": true,
		"sourceMap": true,
		"removeComments": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*"
	]
}
