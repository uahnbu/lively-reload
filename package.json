{
  "name": "lively-reload",
  "displayName": "Lively Reload",
  "description": "Reload your webpage without saving",
  "version": "0.0.1",
  "publisher": "uahnbu",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/uahnbu/lively-reload"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "livelyReload.startLively",
        "title": "Go Lively"
      },
      {
        "command": "livelyReload.closeLively",
        "title": "Quit Lively"
      },
      {
        "command": "livelyReload.reloadLively",
        "title": "Reload Lively"
      }
    ],
    "configuration": {
      "title": "Lively Reload",
      "properties": {
        "livelyReload.port": {
          "type": "number",
          "default": "2020",
          "minimum": 0,
          "maximum": 65535,
          "description": "A port to listen to the server."
        },
        "livelyReload.pugOptions": {
          "type": "object",
          "default": {
            "outdir": "dist",
            "maxLoop": 99,
            "pretty": true
          },
          "description": "Configurations for exported .pug files.\n\nSet \"outdir\" to null to disable exporting .pug files on save.\n(the .pug content will still be servable to the live preview)"
        },
        "livelyReload.sassOptions": {
          "type": "object",
          "default": {
            "outdir": "dist",
            "pretty": true
          },
          "description": "Configurations for exported .scss/.sass files.\n\nSet \"outdir\" to null to disable exporting .scss/.sass files on save.\n(the .scss/.sass content will still be servable to the live preview)"
        },
        "livelyReload.typescriptOptions": {
          "type": "object",
          "default": {
            "outdir": "dist",
            "pretty": true
          },
          "description": "Configurations for exported .ts files.\n\nSet \"outdir\" to null to disable exporting .ts files on save.\n(When set to null, the .js files won't be updated, but the preview will still automatically reload.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack",
    "publish": "vsce publish patch",
    "compile": "webpack --mode development",
    "watch": "webpack -w --mode development",
    "lint": "eslint src --ext ts",
    "compiled:ts": "tsc",
    "compiled:html": "cpx \"src/**/*.html\" dist",
    "compiled": "run-p compile:*",
    "watched": "run-p \"watch:* -- -w\""
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/pug": "^2.0.4",
    "@types/sass": "^1.16.0",
    "@types/vscode": "^1.53.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "fork-ts-checker-webpack-plugin": "^6.2.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.3.1",
    "mocha": "^8.2.1",
    "node-loader": "^1.0.2",
    "ts-loader": "^8.0.18",
    "utf-8-validate": "^5.0.4",
    "vscode-test": "^1.5.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pug": "^3.0.0",
    "sass": "^1.32.7",
    "typescript": "^4.1.3",
    "ws": "^7.4.3"
  }
}
