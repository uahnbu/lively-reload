{
  "name": "lively-reload",
  "displayName": "Lively Reload",
  "description": "Reload your webpage without saving",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "lively-reload.startLively",
        "title": "Go Lively"
      },
      {
        "command": "lively-reload.closeLively",
        "title": "Quit Lively"
      }
    ],
    "configuration": {
      "title": "Lively Reload",
      "properties": {
        "lively-reload.port": {
          "type": "number",
          "default": "2020",
          "minimum": 0,
          "maximum": 65535,
          "description": "A port to listen to the server"
        },
        "lively-reload.excluded": {
          "type": "array",
          "default": [
            "node_modules"
          ],
          "description": "Ignored folders when scanning for default .html file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:ts": "tsc",
    "compile:html": "npx cpx \"src/**/*.html\" dist",
    "compile": "run-p compile:*",
    "watch": "run-p \"compile:* -- -w\"",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cpx": "^1.5.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "html-validate": "^4.5.0",
    "ws": "^7.4.3"
  }
}
